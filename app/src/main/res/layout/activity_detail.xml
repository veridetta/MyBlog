<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/des_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/des_bg_art"
                            android:layout_width="match_parent"
                            android:scaleType="fitXY"
                            android:layout_height="@dimen/_220sdp"
                            android:background="@color/orange_300"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:padding="@dimen/_10sdp">
                        <LinearLayout
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="wrap_content"
                            android:layout_weight="9"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/des_art_judul"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Judul Artikel"
                                android:maxLength="80"
                                android:textSize="@dimen/_22sdp"
                                android:textColor="@color/grey_900"
                                android:textStyle="bold"
                                />
                            <LinearLayout
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/des_penerbit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MyBlog"
                                    android:textStyle="bold"
                                    android:textColor="@color/grey_800"
                                    android:textSize="@dimen/_13sdp"/>
                                <ImageView
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:background="@drawable/clock"/>
                                <TextView
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:id="@+id/des_waktu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MyBlog"
                                    android:textStyle="bold"
                                    android:textColor="@color/grey_800"
                                    android:textSize="@dimen/_13sdp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="@dimen/_4sdp"
                                android:id="@+id/des_kategori"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_6sdp">

                            </LinearLayout>
                            <WebView
                                android:layout_marginTop="@dimen/_8sdp"
                                android:id="@+id/des_isi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="WebViewLayout" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <io.supercharge.shimmerlayout.ShimmerLayout
                    android:id="@+id/sh_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/shimmer_des"/>
                </io.supercharge.shimmerlayout.ShimmerLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/des_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_14sdp"
                    app:cardCornerRadius="@dimen/_10sdp">
                    <ImageView
                        android:layout_margin="@dimen/_8sdp"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/back"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/des_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_200sdp"
                    android:layout_marginLeft="@dimen/_250sdp"
                    app:cardCornerRadius="@dimen/_10sdp">
                    <ImageView
                        android:id="@+id/img_des_fav"
                        android:layout_margin="@dimen/_8sdp"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/nofav"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/des_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_250sdp"
                    android:layout_marginLeft="@dimen/_250sdp"
                    app:cardCornerRadius="@dimen/_10sdp">
                    <ImageView
                        android:layout_margin="@dimen/_8sdp"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/share"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>